{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
    <h1>Formations</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ formation.Name }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ formation.DateDebut ? formation.DateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ formation.dateFin ? formation.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Acquis</th>
                <td>{{ formation.acquis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('formations_index') }}">back to list</a>

    <a href="{{ path('formations_edit', {'id': formation.id}) }}">edit</a>

    {{ include('formations/_delete_form.html.twig') }}
